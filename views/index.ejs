<%- include('./include/header.ejs') %> 

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-4 p-5">
            <form action="" method="POST">
                <div class="form-group">
                  <label for="name">Name</label>
                  <input type="text" class="form-control" placeholder="Enter yourname" name="name" required>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
              </form>
        </div>
        <div class="col-lg-5 p-5">
            <h4>List Name</h4>
            <div class="list-group">
                <% if(users.length) { %>
                    <% users.forEach(user => {  %> 
                        <a title="Edit <%= user.name %>" href="/update/<%= user.id %>" class="list-group-item list-group-item-action">
                            <%= user.name %>
                        </a>
                    <% }); %> 
                <% } else { %>
                    <li class="list-group-item">No data results</li>
                <% } %>  
              </div>
        </div>
    </div>
</div>

<%- include('./include/footer.ejs') %> 


